.tree{
   width:100%;
   height:100%;
   background:#444;
   position:relative;
}
.centerLine{width:2px;height:100%;background:#e5751a;position:absolute;top:0;left:50%;margin-left:-1px;}
.tree .list{
 color:#fff;font-size:20rpx;padding:0 30rpx;border:1px solid #e5751a;position:absolute;top:15rpx;
}
.list .line{
   width:30rpx;height:2px;background:#e5751a;position:absolute;top:50%;margin-top:-1px;
}
.income .line{
 right:-30rpx;
}
.tree .income{
  right:30rpx;background:red;border:1px solid red;border-radius:2px;
}
.expenditure .line{
 left:-30rpx;
}
.tree .expenditure{
 left:30rpx;background:green;border:1px solid green;border-radius:2px;
}
.txt,text{white-space:nowrap;}
