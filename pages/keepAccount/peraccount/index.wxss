.page{

}
.tree{
   width:100%;
   height:320rpx;
   background:#444;
   position:relative;
}
.centerLine{width:90%;height:2px;background:#e5751a;position:absolute;top:50%;margin-top:-1px;left:5%;}
.tree .list{
  display:inline-block;color:#fff;font-size:20rpx;padding:0 30rpx;line-height:30rpx;border:1px solid #e5751a;position:absolute;top:-15rpx;
}
.list .line{
   width:30rpx;height:2px;background:#e5751a;position:absolute;left:-30rpx;top:50%;margin-top:-1px;
}
.income{
 transform:rotateZ(-90deg);transform-origin:-30rpx center;
}
.expenditure{
 transform:rotateZ(90deg);transform-origin:-30rpx center;
}
.content{margin:0 30rpx;position:relative;background:#fff;border-radius:3px;padding:40px 20px 20px;font-size:26rpx;color:#444;}
.title{position:absolute;font-size:36rpx;line-height:90rpx;top:-10rpx;border-radius:3px;width:240rpx;left:50%;margin-left:-120rpx;color:#444;letter-spacing:2px;background:#fff;}
.secline{display:flex;align-items:center;justify-content:space-between;border-bottom:1rpx solid #f0f0f0;height:96rpx;font-size:30rpx;}
.secline view{padding-right:10px;letter-spacing:2px;display:inline-block;width:175rpx;flex-shrink:0;}
.secline input{text-align:right;}
input:placeholder{color: #cbcbcb; font-weight: normal;}
.btnContainer{position:fixed;bottom:50rpx;width:100%;text-align:center;}
.btnContainer button{width:90%;}
.secline-text{text-align:left;line-height:30rpx;font-size:26rpx;color:#444;padding:20rpx 0;border:1px solid #f0f0f0;border:none;}
.wait{margin-top:170rpx;}
.roomcard-container{height:200px;background:#808080;position:absolute;top:0;right:0;line-height:95rpx;padding:0 2px;}
.cardList{color:#fff;border-bottom:1px solid #fff;}
t{display:flex;}
.noborder{border:none;}
.scroll-container{display:flex;padding:10rpx;}
scroll-view{background:#e6e6e6;border:1px solid #f0f0f0;}
.item{flex-shrink:0;margin:0 10rpx;color:#808080;font-size:0rpx;background:#fff;padding:4px 6px;border-radius:2px;}
.item view{font-size:22rpx;}
.item image{width:56rpx;}
.imgContainer{width:60rpx;border-radius:0;overflow:hidden;height:60rpx;display:inline-block;}
