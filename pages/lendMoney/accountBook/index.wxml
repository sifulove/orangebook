<view class="page" style="width: 100%;height: 100%;">
    <view class="tabContent">
       <view bindtap="tabchange" class="{{[current == 0 ? 'active' : '']}}" data-id="0">借款负债</view>
       <view bindtap="tabchange" class="{{[current == 01? 'active' : '']}}" data-id="1">应收账款</view>
    </view>
    <swiper current="{{current}}" duration="100">
        <swiper-item>
          <scroll-view scroll-y="true" class="_scroll-view" bindscrolltolower="downrefresh">
              <view class="_div data-v-50f4f619 grousList" wx:for="{{list1}}" wx:for-index="index" wx:for-item="item">
                <image src="{{item.imgUrl}}" class="_img data-v-50f4f619"></image>
                <view class="_div data-v-50f4f619 grousListMsg">
                  <view class="_p data-v-50f4f619">
                    <text wx:if="{{item.status==0}}" class="_text data-v-50f4f619">未超期</text>
                    <text wx:elif="{{item.status==1}}" class="_text data-v-50f4f619" style="color:red">已超期</text>
                    <text wx:else class="_text data-v-50f4f619" style="color:red">已结清</text>
                  </view>
                  <view class="_p data-v-50f4f619">债权人：
                    <text class="_text data-v-50f4f619">小明</text>
                  </view>
                  <view class="_p data-v-50f4f619">金额/已还：<text class="_text data-v-50f4f619">￥200/￥0</text></view>
                  <view class="_p data-v-50f4f619">借款日期：2018-10-11</view>
                  <view class="_p data-v-50f4f619">还款日期：2018-12-10</view>
                  <button size="mini" data-id="{item.id}" bindtap="return" type="warn" wx-if="item.status!=2" class="btn">还款</button>
                </view>
              </view>
          </scroll-view>
        </swiper-item>
        <swiper-item>
          <scroll-view scroll-y="true" class="_scroll-view" bindscrolltolower="downrefresh">
          <view class="_div data-v-50f4f619 grousList" wx:for="{{list1}}" wx:for-index="index" wx:for-item="item">
            <image src="{{item.imgUrl}}" class="_img data-v-50f4f619"></image>
            <view class="_div data-v-50f4f619 grousListMsg">
              <view class="_p data-v-50f4f619">
                <text wx:if="{{item.status==0}}" class="_text data-v-50f4f619">未超期</text>
                <text wx:elif="{{item.status==1}}" class="_text data-v-50f4f619" style="color:red">已超期</text>
                <text wx:else class="_text data-v-50f4f619" style="color:red">已结清</text>
              </view>
              <view class="_p data-v-50f4f619">借款人：
                <text class="_text data-v-50f4f619">小明</text>
              </view>
              <view class="_p data-v-50f4f619">金额/已还：<text class="_text data-v-50f4f619">￥200/￥0</text></view>
              <view class="_p data-v-50f4f619">借款日期：2018-10-11</view>
              <view class="_p data-v-50f4f619">还款日期：2018-12-10</view>
              <button wx-if="item.status!=2" data-id="{{item.id}}" bindtap="hurryup" size="mini" type="warn" class="btn">催还</button>
            </view>
          </view>
          </scroll-view>
        </swiper-item>
    </swiper>
</view>
